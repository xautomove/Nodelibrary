<?xml version="1.0"?>
<robot name="akm_car">
  <!-- 车体 -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.5 0.3 0.1"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.5 0.3 0.1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="10"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>
  </link>
  <!-- 四个轮子 -->
  <!-- 前轮（X=0.15，红色，用于转向） -->
  <link name="wheel_fl">
    <visual>
      <geometry><cylinder length="0.05" radius="0.05"/></geometry>
      <material name="red">
        <color rgba="0.8 0.2 0.2 1"/>
      </material>
    </visual>
    <collision><geometry><cylinder length="0.05" radius="0.05"/></geometry></collision>
    <inertial><mass value="1"/><origin xyz="0 0 0"/><inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/></inertial>
  </link>
  <link name="wheel_fr">
    <visual>
      <geometry><cylinder length="0.05" radius="0.05"/></geometry>
      <material name="red">
        <color rgba="0.8 0.2 0.2 1"/>
      </material>
    </visual>
    <collision><geometry><cylinder length="0.05" radius="0.05"/></geometry></collision>
    <inertial><mass value="1"/><origin xyz="0 0 0"/><inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/></inertial>
  </link>
  <!-- 后轮（X=-0.15，黑色，用于驱动） -->
  <link name="wheel_rl">
    <visual>
      <geometry><cylinder length="0.05" radius="0.05"/></geometry>
      <material name="black">
        <color rgba="0.2 0.2 0.2 1"/>
      </material>
    </visual>
    <collision><geometry><cylinder length="0.05" radius="0.05"/></geometry></collision>
    <inertial><mass value="1"/><origin xyz="0 0 0"/><inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/></inertial>
  </link>
  <link name="wheel_rr">
    <visual>
      <geometry><cylinder length="0.05" radius="0.05"/></geometry>
      <material name="black">
        <color rgba="0.2 0.2 0.2 1"/>
      </material>
    </visual>
    <collision><geometry><cylinder length="0.05" radius="0.05"/></geometry></collision>
    <inertial><mass value="1"/><origin xyz="0 0 0"/><inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/></inertial>
  </link>
  <!-- 激光雷达 -->
  <link name="lidar_link">
    <visual>
      <geometry><cylinder length="0.05" radius="0.03"/></geometry>
      <material name="yellow">
        <color rgba="0.8 0.8 0.1 1"/>
      </material>
    </visual>
    <collision><geometry><cylinder length="0.05" radius="0.03"/></geometry></collision>
    <inertial><mass value="0.5"/><origin xyz="0 0 0"/><inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/></inertial>
  </link>
  <!-- IMU -->
  <link name="imu_link">
    <visual>
      <geometry><box size="0.05 0.05 0.02"/></geometry>
      <material name="purple">
        <color rgba="0.8 0.1 0.8 1"/>
      </material>
    </visual>
    <collision><geometry><box size="0.05 0.05 0.02"/></geometry></collision>
    <inertial><mass value="0.2"/><origin xyz="0 0 0"/><inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/></inertial>
  </link>
  <!-- 关节：阿克曼转向结构 -->
  <!-- 前轮转向关节（可自由转向，避免阻力） -->
  <joint name="wheel_fl_steer_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_fl"/>
    <origin xyz="0.15 0.20 -0.05" rpy="1.5708 0 0"/>
    <axis xyz="0 0 1"/>
    <dynamics damping="0.1" friction="0.05"/>
  </joint>
  <joint name="wheel_fr_steer_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_fr"/>
    <origin xyz="0.15 -0.20 -0.05" rpy="1.5708 0 0"/>
    <axis xyz="0 0 1"/>
    <dynamics damping="0.1" friction="0.05"/>
  </joint>
  <!-- 后轮驱动关节（绕Z轴滚动） -->
  <joint name="wheel_rl_drive_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_rl"/>
    <origin xyz="-0.15 0.20 -0.05" rpy="1.5708 0 0"/>
    <axis xyz="0 0 -1"/>
    <dynamics damping="0.2" friction="0.1"/>
  </joint>
  <joint name="wheel_rr_drive_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_rr"/>
    <origin xyz="-0.15 -0.20 -0.05" rpy="1.5708 0 0"/>
    <axis xyz="0 0 -1"/>
    <dynamics damping="0.2" friction="0.1"/>
  </joint>
  <joint name="lidar_joint" type="fixed">
    <parent link="base_link"/>
    <child link="lidar_link"/>
    <origin xyz="0 0 0.075" rpy="0 0 0"/>
  </joint>
  <joint name="imu_joint" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <origin xyz="0 0 0.12" rpy="0 0 0"/>
  </joint>
  <!-- 激光雷达插件 -->
  <gazebo reference="lidar_link">
    <sensor type="ray" name="lidar">
      <pose>0 0 0 0 0 0</pose>
      <visualize>true</visualize>
      <update_rate>10</update_rate>
      <ray>
        <scan>
          <horizontal>
            <samples>360</samples>
            <resolution>1</resolution>
            <min_angle>-3.14</min_angle>
            <max_angle>3.14</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.12</min>
          <max>6.0</max>
        </range>
        <noise>
          <type>gaussian</type>
          <mean>0.0</mean>
          <stddev>0.01</stddev>
        </noise>
      </ray>
      <plugin name="gazebo_ros_ray_sensor" filename="libgazebo_ros_ray_sensor.so">
        <topicName>/scan</topicName>
        <frameName>lidar_link</frameName>
      </plugin>
    </sensor>
  </gazebo>
  <!-- IMU插件 -->
  <gazebo reference="imu_link">
    <sensor type="imu" name="imu_sensor">
      <always_on>true</always_on>
      <update_rate>50</update_rate>
      <imu>
        <angular_velocity>
          <x>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>2e-4</stddev>
            </noise>
          </x>
          <y>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>2e-4</stddev>
            </noise>
          </y>
          <z>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>2e-4</stddev>
            </noise>
          </z>
        </angular_velocity>
        <linear_acceleration>
          <x>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>1.7e-2</stddev>
            </noise>
          </x>
          <y>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>1.7e-2</stddev>
            </noise>
          </y>
          <z>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>1.7e-2</stddev>
            </noise>
          </z>
        </linear_acceleration>
      </imu>
      <plugin name="gazebo_ros_imu_sensor" filename="libgazebo_ros_imu_sensor.so">
        <topicName>/imu</topicName>
        <frameName>imu_link</frameName>
      </plugin>
    </sensor>
  </gazebo>
  <!-- 差分驱动控制插件（更简单可靠） -->
  <gazebo>
    <plugin name="differential_drive_controller" filename="libgazebo_ros_diff_drive.so">
      
      <ros>
        <namespace></namespace>
      </ros>

      <!-- wheels -->
      <left_joint>wheel_rl_drive_joint</left_joint>
      <right_joint>wheel_rr_drive_joint</right_joint>

      <!-- kinematics -->
      <wheel_separation>0.36</wheel_separation>
      <wheel_diameter>0.1</wheel_diameter>

      <!-- limits -->
      <max_wheel_torque>20</max_wheel_torque>
      <max_wheel_acceleration>1.0</max_wheel_acceleration>

      <!-- output -->
      <publish_odom>true</publish_odom>
      <publish_odom_tf>true</publish_odom_tf>
      <publish_wheel_tf>true</publish_wheel_tf>

      <odometry_frame>odom</odometry_frame>
      <robot_base_frame>base_link</robot_base_frame>

      <!-- Topic to receive geometry_msgs/Twist message commands, defaults to `cmd_vel` -->
      <command_topic>cmd_vel</command_topic>

      <!-- Topic to publish nav_msgs/Odometry messages, defaults to `odom` -->
      <odometry_topic>odom</odometry_topic>

      <!-- Odometry source, 0 for ENCODER, 1 for WORLD, defaults to WORLD -->
      <odometry_source>1</odometry_source>

      <!-- Update rate in Hz, defaults to 50 -->
      <update_rate>50</update_rate>

    </plugin>
  </gazebo>
  
  <!-- 轮子的Gazebo物理属性 -->
  <gazebo reference="wheel_rl">
    <material>Gazebo/Black</material>
    <mu1>0.8</mu1>
    <mu2>0.5</mu2>
    <kp>100000.0</kp>
    <kd>1.0</kd>
    <minDepth>0.001</minDepth>
    <maxVel>1.0</maxVel>
    <fdir1>1 0 0</fdir1>
  </gazebo>
  
  <gazebo reference="wheel_rr">
    <material>Gazebo/Black</material>
    <mu1>0.8</mu1>
    <mu2>0.5</mu2>
    <kp>100000.0</kp>
    <kd>1.0</kd>
    <minDepth>0.001</minDepth>
    <maxVel>1.0</maxVel>
    <fdir1>1 0 0</fdir1>
  </gazebo>
  
  <gazebo reference="wheel_fl">
    <material>Gazebo/Red</material>
    <mu1>0.6</mu1>
    <mu2>0.3</mu2>
    <kp>100000.0</kp>
    <kd>1.0</kd>
    <minDepth>0.001</minDepth>
    <maxVel>1.0</maxVel>
    <fdir1>1 0 0</fdir1>
  </gazebo>
  
  <gazebo reference="wheel_fr">
    <material>Gazebo/Red</material>
    <mu1>0.6</mu1>
    <mu2>0.3</mu2>
    <kp>100000.0</kp>
    <kd>1.0</kd>
    <minDepth>0.001</minDepth>
    <maxVel>1.0</maxVel>
    <fdir1>1 0 0</fdir1>
  </gazebo>
</robot> 